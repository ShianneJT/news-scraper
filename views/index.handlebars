{{! Test }}
<header>
    <div class="header-title">
        <img src="/images/game.png" class="logo" alt="Game controller">
        <div class="header-text">
            <h1>Mongo Video Game News!</h1>
            <h3>Kotaku</h3>
        </div>

        <div class="navbar navbar-expand-sm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link btn" href="/"><i class="fas fa-gamepad fa-2x pr-2"></i>Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn" href="#"><i class="far fa-save fa-2x pr-2"></i>Saved Articles</a>
                </li>
                <li class="nav-item">
                   <a class="nav-link btn" href="#"><i class="fas fa-chevron-circle-down fa-2x pr-2"></i>Scrape New Articles</a>

                </li>
                <li class="nav-item">
                   <a class="nav-link btn" href="#"><i class="far fa-trash-alt fa-2x pr-2"></i>Clear Articles</a>

                </li>
            </ul>
        </div>
    </div>
</header>

<div class="container cards">
    {{#each articles}}
    <div class="card m-3">
        <div class="card-body">
            <h4 class="card-title">{{headline}}</h4>
            <img class="card-img-top" src="https://i.kinja-img.com/gawker-media/image/upload/{{image}}">
            <p class="card-text">{{summary}}</p>
            <div class="card-buttons">
                <a href="#" class="btn card-button"><i class="far fa-save fa-lg pr-2"></i>Save Article</a>
                <a href="#" class="btn card-button"><i class="far fa-comments fa-lg pr-2"></i>Comments</a>
            </div>

        </div>
    </div>
    {{/each}}
</div>

