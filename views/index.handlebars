{{!-- Article cards --}}
<div class="container cards">
    {{#each articles}}
    {{#unless saved}}

    <div class="card m-3">
        <div class="card-body">
            <img class="card-img-top" src="https://i.kinja-img.com/gawker-media/image/upload/{{image}}">
            <h4 class="card-title">{{title}}</h4>
            <p class="card-text">{{summary}}</p>
            <a href="{{link}}" target="_blank">Read More...</a>
        </div>
        <div class="card-buttons">
            <button id={{_id}} class="btn commentsBtn" data-target="#commentsModal" data-toggle="modal"><i class="far fa-save fa-lg pr-2"></i>Comments</button>
            <button type="button" class="btn save-article-btn" data-id={{_id}}><i class="far fa-save fa-lg pr-2"></i>Save Article</button>
            {{!-- <button id={{_id}} class="btn commentsBtn" data-toggle="modal" data-target="#commentModal"><i class="far fa-comments fa-lg pr-2"></i>Comments</button> --}}
        </div>
    </div>
    {{/unless}}
    {{/each}}
</div>

<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="article-title">{{!-- Article's Title --}}</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="leave-comment">Leave a comment:</label>
                        <textarea class="form-control" id="commentText" rows="3"></textarea>
                    </div>
                    <div class="submitComment">{{!-- Submit button with article ID --}}</div>
                </form>
            </div>
            <div class="modal-footer pastComments">{{!-- Comments --}}</button></div>
        </div>
    </div>
</div>
